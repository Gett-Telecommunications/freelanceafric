{
  "firestore": {
    "rules": "apps/firebase-functions/firestore.rules",
    "indexes": "apps/firebase-functions/firestore.indexes.json"
  },
  "hosting": {
    "public": "apps/firebase-functions/public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "apps/firebase-functions/storage.rules"
  },
  "functions": [
    {
      "codebase": "firebase-auth",
      "source": "dist/libs/auth/firebase",
      "runtime": "nodejs16",
      "ignore": ["*.local"]
    }
  ],
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5500
    },
    "pubsub": {
      "port": 8085
    },
    "storage": {
      "port": 9199
    },
    "eventarc": {
      "port": 9299
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  },
  "remoteconfig": {
    "template": "apps/firebase-functions/remoteconfig.template.json"
  },
  "extensions": {}
}
